{
  "settings": {
    "number_of_shards": %%CONF_SHARDS%%,
    "number_of_replicas": %%REPLICAS%%
  },
  "mappings": {
    "_meta": {
      "version": "%%VERSION%%",
      "name": "%%PREFIX%%"
    },
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword", "ignore_above": 64
      },
      "profile": {
        "properties": {
            "id": {
              "type": "keyword"
            }
        }
      },
      "timestamp": {
        "type": "date"
      },
      "type": {
        "type": "keyword"
      },
      "properties": {
        "type": "flattened"
      },
      "data": {
        "properties": {
          "product": {
            "id": {
              "type": "keyword",
              "ignore_above": 64
            },
            "name": {
              "type": "keyword"
            },
            "sku": {
              "type": "keyword",
              "ignore_above": 32
            },
            "category": {
              "type": "keyword",
              "ignore_above": 64
            },
            "brand": {
              "type": "keyword",
              "ignore_above": 96
            },
            "variant": {
              "name": {
                "type": "keyword"
              },
              "color": {
                "type": "keyword",
                "ignore_above": 48
              },
              "size": {
                "type": "keyword",
                "ignore_above": 16
              }
            },
            "price": {
              "type": "float"
            },
            "rate": {
              "type": "integer"
            }
          }
        }
      },
      "traits": {
        "type": "object",
        "dynamic": "true"
      }
    }
  },
  "aliases": {
    "%%ALIAS%%": {}
  }
}